<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
    <link rel="stylesheet" type="text/css" href="/css/list.css">
    <title>Cadastro de Usuários</title>
</head>
<body>
    <%- include("../snippets/header.ejs", {user:true}); %>
    <%- include("../snippets/nav.ejs"); %>
    <main>
        <h1>Lista de Usuários</h1><br>
        <table border="1" bordercolor="#000000" cellpading="0" cellspacing="0">
            <tr>
                <th>Ação</th>
                <th>CPF</th>
                <th>Senha</th>
                <th>Nome</th>
                <th>Data de Nascimento</th>
                <th>Nacionalidade</th>
                <th>E-mail</th>
                <th>Telefone</th>
            </tr>

            <% users.forEach((user) => { %>
                <tr>
                    <td>
                        <a href="./form/?cpf=<%= user.cpf %>">Atualizar</a>
                        <a href="./delete/?cpf=<%= user.cpf %>">Excluir</a>
                    </td>
                    <td><%= user.cpf %></td>
                    <td><%= user.senha %></td>
                    <td><%= user.nome %></td>
                    <td><%= user.data_nascimento %></td>
                    <td><%= user.nacionalidade %></td>
                    <td><%= user.email %></td>
                    <td><%= user.telefone %></td>
                </tr>
            <% }) %>
        </table><br>
        <a href="./form/?cpf=-1">Inserir Usuário</a><br>
    </main>
    <%- include("../snippets/footer.ejs"); %>
</body>
</html>