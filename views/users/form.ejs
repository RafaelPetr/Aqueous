<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="/css/styles.css">    
    <link rel="stylesheet" type="text/css" href="/css/form.css">    
    <title>Cadastro de Clientes</title>
</head>
<body>
    <%- include("../snippets/header.ejs", {user:true}); %>
    <%- include("../snippets/nav.ejs"); %>
    <main>
        <form action="../save/" method="post">
            <%- include("../snippets/formTitle.ejs", {titulo:(user.length > 0 ? user[0].nome:undefined)}); %>
            
            <% if (user.length <= 0) { %>
                <label for="cpf">CPF</label>
                <input type="text" name="cpf" id="cpf" value=""><br>
            <% } else { %>
                <input type="hidden" name="cpf" id="cpf" value="<%= (user.length > 0 ? user[0].cpf:'') %>"><br>
            <% } %>

            <label for="password">Senha</label>
            <input type="password" name="password" id="password" value="<%= (user.length > 0 ? user[0].senha:'') %>"><br>

            <label for="name">Nome</label>
            <input type="text" name="name" id="name" value="<%= (user.length > 0 ? user[0].nome:'') %>"><br>

            <label for="birthDate">Data de Nascimento</label>
            <input type="date" name="birthDate" id="birthDate" value="<%= (user.length > 0 ? user[0].data_nascimento:'') %>"><br>

            <label for="nationality">Nacionalidade</label>
            <input type="text" name="nationality" id="nationality" value="<%= (user.length > 0 ? user[0].nacionalidade:'') %>"><br>

            <label for="email">E-mail</label>
            <input type="text" name="email" id="email" value="<%= (user.length > 0 ? user[0].email:'') %>"><br>

            <label for="phone">Telefone</label>
            <input type="text" name="phone" id="phone" value="<%= (user.length > 0 ? user[0].telefone:'') %>"><br>

            <% if (user.length <= 0) { %>
                <input type="submit" name="action" value="Inserir">
            <% } else { %>
                <input type="submit" name="action" value="Atualizar">
            <% } %>
            <input type="submit" name="action" value="Cancelar">
        </form>
    </main>
    <%- include("../snippets/footer.ejs"); %>
</body>
</html>